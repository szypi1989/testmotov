{% extends 'layout.html.twig' %}
{% block title %}
Auto giełda
{% endblock %}
{% block contents %}
<div class="col-sm-12">
<div class="well ">Wszystkie ogłoszenia (kliknij aby uzyskać więcej informacji)</div>


<table class="table table-bordered">
    <thead>
        <tr class="info">
            <th>Zdjęcie</th>
            <th>Model</th>
            <th>Marka</th>
            <th>Cena</th>
            <th>Silnik</th>
            <th>Moc</th>
            <th>Typ silnika</th>
            <th>Rok produkcji:</th>
            <th>Typ nadwozia:</th>
        </tr>
    </thead>
    <tbody>
        {% for imie in entities %}
            <tr data-href="{{ path('view', {'page': imie.id}) }}" style="cursor:pointer;">
                <td><img src="{{asset('images/'~imie.id~'.jpg?') }}{{ date().timestamp }}" style="max-height:130px; width:auto;" class="img-thumbnail"></td>
                <td>{{ imie.model }}</td>
                <td>{{ imie.mark }}</td>   
                <td>{{ imie.price }}</td>   
                <td>{{ imie.engine }}</td>   
                <td>{{ imie.power }}</td>   
                <td>{{ imie.enginetype}}</td>   
                <td>{{ imie.year}}</td>  
                <td>{{ imie.bodytype}}</td>
                {% if app.user %}{% if app.user.id == imie.id_user  %} <td><a href="{{ path('edit_add',{ 'id_add': imie.id }) }}">Edytuj</a></td> {% endif %}{% endif %}

            </tr>
        {% endfor %}

    </tbody>
    
  </table>

</div>
  
{% endblock %}